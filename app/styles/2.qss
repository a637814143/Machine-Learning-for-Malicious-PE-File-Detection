QDialog {
    background-color: #0a0a0a;
    color: #00ff00;
    font-family: "Consolas", "Monaco", monospace;
    font-size: 14px;
}

QPushButton {
    background-color: #1a1a1a;
    color: #00ff00;
    border: 1px solid #00cc00;
    border-radius: 4px;
    padding: 6px 12px;
}

QPushButton:hover {
    background-color: #2a2a2a;
}

QLineEdit {
    background-color: #1a1a1a;
    color: #00ff00;
    border: 1px solid #00cc00;
    padding: 4px;
}

QLabel {
    color: #00ff00;
}