/* Material dark theme */
QDialog {
    background-color: #121212;
    color: #ffffff;
    font-family: "Roboto", sans-serif;
    font-size: 14px;
}

QPushButton {
    background-color: #1e1e1e;
    color: #ffffff;
    border: 1px solid #bb86fc;
    border-radius: 4px;
    padding: 6px 12px;
}

QPushButton:hover {
    background-color: #2c2c2c;
}

QLineEdit {
    background-color: #1e1e1e;
    color: #ffffff;
    border: 1px solid #bb86fc;
    padding: 4px;
}

QLabel {
    color: #ffffff;
}
